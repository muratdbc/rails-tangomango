<body>
  <!-- Image Background Page Header -->
  <!-- Note: The background image is set within the business-casual.css file. -->


  <!-- Page Content -->

  <div class="container">


    <div id="events" class="col-md-10 col-xs-12">
      <!-- FIRST WEEK -->

      <div class="table-responsive container-fluid">
        <table class="table table-striped ">
          <tbody class="bg-white">
            <!-- days-->
            <div>
              <%today = Date.today%>
              <%@days_from_this_week = (today.at_beginning_of_week..today.at_end_of_week).map %>
              <%(today.at_beginning_of_week..today.at_end_of_week).map.each_with_index do |day ,index| %>
              <th class="col-dark col-white text-center day col-md-1">  <%=day%> <br><%=day.strftime('%A')%>
              </th>
              <%end%>
            </div>
            <!-- First week Schedule-->
            <tr>
              <td>
                <div>
                  <% @monday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                  <hr>
                  <% end %>
                </div>
              </td>
              <td>
                <div>
                  <% @tuesday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                  <hr>
                  <% end %>
                </div>
              </td>
              <td>
                <div>
                  <% @wednesday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %><hr><% end %>
                </div>
              </td>
              <td>
                <div>
                  <% @thursday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                  <hr>
                  <% end %>
                </div>
              </td>
              <td>
                <div>
                  <% @friday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                  <hr>
                  <% end %>
                </div>
              </td>
              <td>
                <div id="murat">
                  <% @saturday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                  <hr>
                  <% end %>
                </div>
              </td>
              <td>
                <div>
                 <% @sunday.each do |event| %>
                 <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                 <hr>
                 <% end %>
               </div>
             </td>
           </tr>
         </tbody>
       </table>
     </div>


     <!-- SECOND WEEK -->
     <div class="table-responsive container-fluid">

      <table class="table table-striped">
        <tbody class="bg-white">
          <!-- days-->
          <tr>
            <%today = Date.today%>
            <%@days_from_this_week = (today.next_week.at_beginning_of_week..today.next_week.at_end_of_week).map %>
            <%(today.next_week.at_beginning_of_week..today.next_week.at_end_of_week).map.each_with_index do |day ,index| %>
            <th class="col-dark col-white text-center day col-md-1"> <%=day%> <br><%=day.strftime('%A')%></td>
             <%end%>
           </tr>
           <!-- First week Schedule-->

           <tr>
            <td>

              <div>
                <% @nextmonday.each do |event| %>
                <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                <hr>
                <% end %>
              </div>
            </td>
            <td>

              <div>
                <% @nexttuesday.each do |event| %>
                <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                <hr>
                <% end %>
               </div>
              </td>
              <td>

                <div>
                  <% @nextwednesday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                 <hr>
                 <% end %>
                </div>
              </td>
              <td>

                <div>
                  <% @nextthursday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                 <hr>
                 <% end %>
                </div>
              </td>
              <td>

                <div>
                  <% @nextfriday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                 <hr>
                 <% end %>
                </div>
              </td>
              <td>

                <div>
                  <% @nextsaturday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                 <hr>
                 <% end %>
                </div>
              </td>
              <td>

                <div>
                  <% @nextsunday.each do |event| %>
                  <%= link_to event.title,event, :data => {:toggle=>"modal", :target=> "#myModal"}, "data-type"  => "json",  remote: true %>
                 <hr>
                 <% end %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>


      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Event Details</h4>
            </div>
            <div class="modal-body">


            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Pop-up temaplate -->
      <div id="tango-event" style="display:none;">
        <div>
          <label for="">Title : </label>
          <span id="title"></span>
        </div>
        <div>
          <label for="">Time : </label>
          <span id="time"></span>
        </div>
        <div>
          <label for="">Category:</label>
          <span id="category"></span>

        </div>
        <div><label for="">Cost : </label>
          <span id="cost"></span>
        </div>
        <div>
          <label for="">Address : </label>
          <span id="address"></span>
        </div>
        <hr>
        <div>
          <label for="">Description : </label>
          <span id="description"></span>
        </div>

      </div>

      <!-- Footer -->
      <footer>
        <div class="row">

        </div>
        <!-- /.row -->
      </footer>

    </div>
    <!-- /.container -->

  </body>